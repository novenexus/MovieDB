@page "/{Route}"
@using MDB.Admin.UI.Pages.Directors
@using MDB.Admin.UI.Pages.FilmGenres
@using MDB.Admin.UI.Pages.Genres
@using MDB.Admin.UI.Pages.SimilarFilms
<h3>@Route</h3>

@if(Route == Routes.Films)
{
    <FilmsPortal />
}

@if (Route == Routes.Genres)
{
    <GenresPortal />
}

@if (Route == Routes.Directors)
{
    <DirectorsPortal />
}

@if (Route == Routes.FilmGenres)
{
    <FilmGenresPortal />
}

@if (Route == Routes.SimilarFilms)
{
    <SimilarFilmsPortal />
}

@code {
    [Parameter] public string Route { get; set;  } = string.Empty;
}
